{
    "name": "backvista/database-dumps",
    "description": "Framework-agnostic PHP package for managing database dumps with SQL exports/imports, supporting PostgreSQL and MySQL",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "database",
        "dump",
        "export",
        "import",
        "sql",
        "postgresql",
        "mysql",
        "symfony",
        "laravel"
    ],
    "authors": [
        {
            "name": "Timur Bayan"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "symfony/finder": "^5.4|^6.0|^7.0",
        "symfony/yaml": "^5.4|^6.0|^7.0"
    },
    "require-dev": {
        "doctrine/dbal": "^2.13|^3.0|^4.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "illuminate/console": "^8.0|^9.0|^10.0|^11.0",
        "illuminate/database": "^8.0|^9.0|^10.0|^11.0",
        "illuminate/support": "^8.0|^9.0|^10.0|^11.0",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.5|^10.0|^11.0",
        "symfony/console": "^5.4|^6.0|^7.0"
    },
    "suggest": {
        "doctrine/dbal": "Required for DoctrineDbalAdapter",
        "illuminate/console": "Required for Laravel artisan commands",
        "illuminate/database": "Required for LaravelDatabaseAdapter",
        "illuminate/support": "Required for Laravel bridge",
        "symfony/console": "Required for Symfony bridge commands",
        "symfony/http-kernel": "Required for Symfony bundle registration"
    },
    "autoload": {
        "psr-4": {
            "BackVista\\DatabaseDumps\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BackVista\\DatabaseDumps\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse --memory-limit=512M",
        "cs-fix": "php-cs-fixer fix"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "BackVista\\DatabaseDumps\\Bridge\\Laravel\\DatabaseDumpsServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
